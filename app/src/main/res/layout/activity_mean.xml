<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mean.activity.MeanActivity"
    android:orientation="vertical">
       <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:visibility="gone"
        tools:listitem="@layout/item_mean"
        android:id="@+id/recycler_view_mean"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/plate"
        android:tint="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_ckal"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0 Kcal"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_no_food"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorLight"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sem_alimentos"/>

    <com.google.android.material.button.MaterialButton
        app:icon="@drawable/outline_add_black"
        app:iconSize="30dp"
        android:background="@drawable/button_style"
        android:textStyle="bold"
        android:text="@string/add_mean"
        android:layout_margin="20dp"
        android:id="@+id/btn_add_mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.material.button.MaterialButton>

</LinearLayout>