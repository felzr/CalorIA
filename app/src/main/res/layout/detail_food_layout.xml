<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Laranja"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"></TextView>
    </LinearLayout>


    <LinearLayout
        android:background="@color/backgroundColor"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/backgroundColor"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Classe"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
                <TextView
                    android:id="@+id/txt_classes"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Frutas"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="energiaKcal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
                <TextView
                    android:id="@+id/txt_calorias_kcal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="222"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="energiaKJ"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
                <TextView
                    android:id="@+id/energia_kj"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="222"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="proteinaG"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
                <TextView
                    android:id="@+id/txt_proteinaG"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="22"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="colesterolMg"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
                <TextView
                    android:id="@+id/txt_colesterolMg"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="carboIdratoG"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
                <TextView
                    android:id="@+id/txt_carboIdratoG"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>